<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone"
    app:cardElevation="4dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/line_expert_detail_bg"
        android:transitionName="line_expert"/>
    <com.zzh.vae.widget.RingCircleImageView
        android:id="@+id/expert_head_detail"
        android:layout_width="@dimen/dimen_distance80dp"
        android:layout_height="@dimen/dimen_distance80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_distance10dp"
        android:layout_marginLeft="@dimen/dimen_distance30dp"
        android:layout_marginTop="@dimen/dimen_distance10dp"
        android:src="@mipmap/ly_2"
        />
    <TextView
        android:id="@+id/expert_name_detail"
        android:layout_below="@id/expert_head_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="专家名称"/>
    <RatingBar
        android:id="@+id/expert_ratingBar_detail"
        style="@style/myRatingBarBlue"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/expert_name_detail"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dimen_distance5dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@id/expert_ratingBar_detail"
        android:id="@+id/linear_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_distance5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/expert_level_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="知名专家"/>
        <TextView
            android:id="@+id/expert_dept_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_distance5dp"
            android:text="科室"/>
    </LinearLayout>

    <TextView
        android:id="@+id/expert_hospital_detail"
        android:layout_below="@id/linear_tmp"
        android:layout_marginTop="@dimen/dimen_distance5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/font_size12sp"
        android:text="医院"/>

    <RelativeLayout
        android:id="@+id/linear_tmp2"
        android:layout_below="@id/expert_hospital_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_distance5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tmp_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_distance20dp"
            android:textSize="@dimen/font_size12sp"
            android:text="擅长: "/>
        <TextView
            android:id="@+id/expert_good"
            android:layout_toRightOf="@+id/tmp_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_distance20dp"
            android:textSize="@dimen/font_size12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="ccccccdddddddddddddddddddddddddddddddddddddddddddd"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/linear_tmp3"
        android:layout_below="@id/linear_tmp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_distance5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tmp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_distance20dp"
            android:textSize="@dimen/font_size12sp"
            android:text="简介: "/>
        <TextView
            android:layout_toRightOf="@+id/tmp_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expert_info"
            android:layout_marginRight="@dimen/dimen_distance20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/font_size12sp"
            android:text="ccccccdddddddddddddddddddddddddddddddddddddddddddd"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/show_info"
        android:layout_below="@+id/linear_tmp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_distance10dp"
        android:layout_marginTop="@dimen/dimen_distance10dp"
        android:paddingLeft="@dimen/dimen_distance10dp"
        android:paddingRight="@dimen/dimen_distance10dp"
        android:paddingTop="@dimen/dimen_distance5dp"
        android:paddingBottom="@dimen/dimen_distance5dp"
        android:background="@drawable/shape_circle_blue"
        android:textColor="#5bd9ce"
        android:text="查看详情"/>

</RelativeLayout>

</android.support.v7.widget.CardView>