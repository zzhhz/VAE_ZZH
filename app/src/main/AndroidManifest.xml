<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zzh.vae">

    <!-- 读写SD卡 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SurfaceActivity" />
        <activity
            android:name=".activity.SlidingActivity"
            android:theme="@style/AppTheme" />
        <activity android:name="com.zzh.html5.activity.Html5Activity" />
        <activity android:name="com.zzh.player.PlayerActivity" />
        <activity android:name="com.zzh.facedetector.FacedetectorActivity" />
        <activity
            android:name="com.zzh.player.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name="com.zzh.player.MediaPlayerActivity" />
        <activity android:name="com.zzh.image.SelectImgActivity" />
        <activity android:name="com.zzh.qrc.QRCActivity" />
        <activity android:name="com.zzh.zoom.RecyclerActivity" />
        <activity android:name="com.zzh.zoom.PullToZoomScrollViewActivity" />
        <activity android:name="com.zzh.image.ShowSystemPictureActivity" />
        <activity android:name="com.zzh.brokenview.BrokenActivity" />
        <activity android:name="com.zzh.facedetector.PermissionActivity" />
        <activity android:name="com.zzh.qrc.ScanQRActivity" />
        <activity android:name="com.zzh.qrc.MipcaActivityCapture"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>